<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Calendars">
        <Preference
            android:title="@string/calendar_permission_title"
            android:summary="@string/calendar_permission_summary"
            android:key="calendar_permission" />
        <SwitchPreference
            android:enabled="false"
            android:title="@string/screenshot_mode_title"
            android:summary="@string/screenshot_mode_summary"
            android:key="screenshot_mode" />
        <MultiSelectListPreference
            android:enabled="false"
            android:title="@string/cal_select_title"
            android:summary="@string/cal_select_summary"
            android:key="calendar_select" />
        <SwitchPreferenceCompat
            android:key="open_settings_on_tap"
            android:title="@string/open_settings_on_tap"
            android:summary="@string/open_settings_on_tap_summary"
            android:defaultValue="true" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Appearance">
        <SeekBarPreference
            android:title="@string/text_size"
            android:summary="@string/text_size_summary"
            android:defaultValue="14"
            android:max="40"
            android:key="text_size" />
        <ListPreference
            android:title="@string/date_format_title"
            android:summary="@string/date_format_summary"
            android:key="date_format" />
        <ListPreference
            android:title="@string/date_format_allday_title"
            android:summary="@string/date_format_allday_summary"
            android:key="date_format_allday" />
    </PreferenceCategory>

</PreferenceScreen>